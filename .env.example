# S3/MinIO Storage Backend Configuration
# These are the primary storage config variables (preferred over legacy FILE_STORAGE_*)
# STORAGE_ENDPOINT=http://localhost:9000
# STORAGE_BUCKET=nchat-files
# STORAGE_ACCESS_KEY=minioadmin
# STORAGE_SECRET_KEY=minioadmin
# STORAGE_REGION=us-east-1

# File processing service (for thumbnails, optimization, virus scanning)
# FILE_PROCESSING_URL=http://localhost:3104
# FILE_PROCESSING_WEBHOOK_URL=http://localhost:3000/api/files/webhook
# FILE_PROCESSING_WEBHOOK_SECRET=

# File upload limits
# FILE_MAX_SIZE=104857600 (100MB default)
# FILE_ALLOWED_TYPES= (comma-separated MIME types, empty = all allowed)
# FILE_BLOCKED_TYPES=application/x-executable,application/x-msdownload
# FILE_BLOCKED_EXTENSIONS=exe,bat,cmd,com,msi,scr,pif

# File processing options
# FILE_ENABLE_VIRUS_SCAN=false
# FILE_ENABLE_OPTIMIZATION=true
# FILE_STRIP_EXIF=true
# FILE_GENERATE_THUMBNAILS=true
# FILE_THUMBNAIL_SIZES=100,400,1200


# ═══════════════════════════════════════════════════════════════════════════════
# DEVELOPMENT ONLY
# ═══════════════════════════════════════════════════════════════════════════════

# Enable React Query devtools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Enable debug logging
NEXT_PUBLIC_DEBUG=false

# Mock API responses (for offline development)
NEXT_PUBLIC_MOCK_API=false
