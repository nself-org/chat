# ═══════════════════════════════════════════════════════════════════════════════
# nself-chat Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════════
#
# This is the complete environment variable reference for nself-chat.
# Copy this file to .env.local and customize for your environment.
#
# Usage:
#   cp .env.example .env.local
#   # Edit .env.local with your values
#   pnpm dev
#
# ═══════════════════════════════════════════════════════════════════════════════


# ═══════════════════════════════════════════════════════════════════════════════
# ENVIRONMENT
# ═══════════════════════════════════════════════════════════════════════════════

# Application environment: development | staging | production
NEXT_PUBLIC_ENV=development

# Enable development authentication (test users, auto-login)
# Set to false in production to use real authentication
NEXT_PUBLIC_USE_DEV_AUTH=true

# Base URL for the application (used for OAuth callbacks, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000


# ═══════════════════════════════════════════════════════════════════════════════
# NHOST / BACKEND SERVICES
# ═══════════════════════════════════════════════════════════════════════════════

# Nhost project configuration
NEXT_PUBLIC_NHOST_SUBDOMAIN=localhost
NEXT_PUBLIC_NHOST_REGION=local

# GraphQL endpoint (Hasura)
NEXT_PUBLIC_GRAPHQL_URL=http://api.localhost/v1/graphql
NEXT_PUBLIC_WS_URL=ws://api.localhost/v1/graphql

# Authentication service
NEXT_PUBLIC_AUTH_URL=http://auth.localhost/v1/auth

# File storage service (MinIO)
NEXT_PUBLIC_STORAGE_URL=http://storage.localhost/v1/storage

# Serverless functions
NEXT_PUBLIC_FUNCTIONS_URL=http://functions.localhost/v1/functions

# Real-time WebSocket server (Socket.io)
NEXT_PUBLIC_SOCKET_URL=ws://realtime.localhost

# Search service (MeiliSearch)
NEXT_PUBLIC_SEARCH_URL=http://search.localhost


# ═══════════════════════════════════════════════════════════════════════════════
# PLATFORM TEMPLATE
# ═══════════════════════════════════════════════════════════════════════════════

# Platform template to use: default | slack | discord | telegram | whatsapp
# Each template provides different UI/UX patterns, terminology, and styling
NEXT_PUBLIC_PLATFORM_TEMPLATE=default


# ═══════════════════════════════════════════════════════════════════════════════
# WHITE-LABEL BRANDING
# ═══════════════════════════════════════════════════════════════════════════════

# Application name (shown in header, title, emails)
NEXT_PUBLIC_APP_NAME=nchat

# Application tagline
NEXT_PUBLIC_APP_TAGLINE=Modern Team Communication

# Logo image URL (relative or absolute)
NEXT_PUBLIC_APP_LOGO=/logo.svg

# Favicon URL
NEXT_PUBLIC_APP_FAVICON=/favicon.ico

# Company name (shown in footer, legal pages)
NEXT_PUBLIC_COMPANY_NAME=nself

# Company website
NEXT_PUBLIC_COMPANY_URL=https://nself.org

# Support email
NEXT_PUBLIC_SUPPORT_EMAIL=support@nself.org


# ═══════════════════════════════════════════════════════════════════════════════
# THEME CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Default color mode: light | dark | system
NEXT_PUBLIC_THEME_MODE=dark

# Primary brand color (buttons, links, accents)
NEXT_PUBLIC_THEME_PRIMARY=#00D4FF

# Secondary color (highlights, badges)
NEXT_PUBLIC_THEME_SECONDARY=#6366F1

# Accent color (success states, notifications)
NEXT_PUBLIC_THEME_ACCENT=#10B981

# Background colors (override template defaults)
# NEXT_PUBLIC_THEME_BACKGROUND=#0A0A0F
# NEXT_PUBLIC_THEME_SURFACE=#12121A

# Text colors
# NEXT_PUBLIC_THEME_TEXT=#F8FAFC
# NEXT_PUBLIC_THEME_MUTED=#94A3B8

# Border color
# NEXT_PUBLIC_THEME_BORDER=#1E293B

# Border radius: none | sm | md | lg | xl | full
NEXT_PUBLIC_THEME_RADIUS=md

# Font family: inter | system | sf-pro | segoe | roboto | open-sans
NEXT_PUBLIC_THEME_FONT=inter


# ═══════════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS - CORE MESSAGING
# ═══════════════════════════════════════════════════════════════════════════════

# Public channels (#general, #random, etc.)
NEXT_PUBLIC_FEATURE_PUBLIC_CHANNELS=true

# Private channels (invite-only)
NEXT_PUBLIC_FEATURE_PRIVATE_CHANNELS=true

# Direct messages (1-on-1)
NEXT_PUBLIC_FEATURE_DIRECT_MESSAGES=true

# Group direct messages (2-8 people)
NEXT_PUBLIC_FEATURE_GROUP_DMS=true

# Threaded replies
NEXT_PUBLIC_FEATURE_THREADS=true

# Message reactions (emoji)
NEXT_PUBLIC_FEATURE_REACTIONS=true

# User @mentions
NEXT_PUBLIC_FEATURE_MENTIONS=true

# Channel #mentions
NEXT_PUBLIC_FEATURE_CHANNEL_MENTIONS=true


# ═══════════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS - RICH CONTENT
# ═══════════════════════════════════════════════════════════════════════════════

# File uploads (images, documents, etc.)
NEXT_PUBLIC_FEATURE_FILE_UPLOADS=true

# Voice messages (audio recording)
NEXT_PUBLIC_FEATURE_VOICE_MESSAGES=false

# Video calls (WebRTC)
NEXT_PUBLIC_FEATURE_VIDEO_CALLS=false

# Screen sharing
NEXT_PUBLIC_FEATURE_SCREEN_SHARE=false

# Code blocks with syntax highlighting
NEXT_PUBLIC_FEATURE_CODE_BLOCKS=true

# Markdown formatting
NEXT_PUBLIC_FEATURE_MARKDOWN=true

# Link previews (unfurling)
NEXT_PUBLIC_FEATURE_LINK_PREVIEWS=true

# Custom emoji (workspace-specific)
NEXT_PUBLIC_FEATURE_CUSTOM_EMOJIS=true

# GIF picker integration
NEXT_PUBLIC_FEATURE_GIF_PICKER=true


# ═══════════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS - ADVANCED
# ═══════════════════════════════════════════════════════════════════════════════

# Message search
NEXT_PUBLIC_FEATURE_MESSAGE_SEARCH=true

# User presence (online/away/offline)
NEXT_PUBLIC_FEATURE_USER_PRESENCE=true

# Typing indicators
NEXT_PUBLIC_FEATURE_TYPING_INDICATORS=true

# Read receipts
NEXT_PUBLIC_FEATURE_READ_RECEIPTS=true

# Message scheduling (send later)
NEXT_PUBLIC_FEATURE_MESSAGE_SCHEDULING=false

# Message pinning
NEXT_PUBLIC_FEATURE_MESSAGE_PINS=true

# Message bookmarks
NEXT_PUBLIC_FEATURE_BOOKMARKS=true

# Channel categories
NEXT_PUBLIC_FEATURE_CHANNEL_CATEGORIES=true

# Guest access (external users)
NEXT_PUBLIC_FEATURE_GUEST_ACCESS=false

# User invites
NEXT_PUBLIC_FEATURE_INVITES=true


# ═══════════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS - INTEGRATIONS
# ═══════════════════════════════════════════════════════════════════════════════

# Slack import/sync
NEXT_PUBLIC_FEATURE_SLACK_INTEGRATION=false

# GitHub notifications
NEXT_PUBLIC_FEATURE_GITHUB_INTEGRATION=false

# Jira integration
NEXT_PUBLIC_FEATURE_JIRA_INTEGRATION=false

# Google Drive file sharing
NEXT_PUBLIC_FEATURE_GOOGLE_DRIVE=false

# Incoming webhooks
NEXT_PUBLIC_FEATURE_WEBHOOKS=true

# Bot accounts
NEXT_PUBLIC_FEATURE_BOTS=true

# Slash commands (/remind, /poll, etc.)
NEXT_PUBLIC_FEATURE_SLASH_COMMANDS=true


# ═══════════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS - MODERATION
# ═══════════════════════════════════════════════════════════════════════════════

# Automatic content moderation
NEXT_PUBLIC_FEATURE_AUTO_MODERATION=false

# Profanity filter
NEXT_PUBLIC_FEATURE_PROFANITY_FILTER=false

# Spam detection
NEXT_PUBLIC_FEATURE_SPAM_DETECTION=false

# Message reporting
NEXT_PUBLIC_FEATURE_MESSAGE_REPORTING=true

# Audit logs
NEXT_PUBLIC_FEATURE_AUDIT_LOGS=true


# ═══════════════════════════════════════════════════════════════════════════════
# UI CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Sidebar position: left | right
NEXT_PUBLIC_SIDEBAR_POSITION=left

# Sidebar default state: expanded | collapsed
NEXT_PUBLIC_SIDEBAR_DEFAULT_STATE=expanded

# Sidebar width in pixels (200-400)
NEXT_PUBLIC_SIDEBAR_WIDTH=260

# Message density: compact | comfortable | spacious
NEXT_PUBLIC_MESSAGE_DENSITY=comfortable

# Group consecutive messages from same user
NEXT_PUBLIC_MESSAGE_GROUPING=true

# Avatar style: circle | rounded | square
NEXT_PUBLIC_AVATAR_STYLE=circle

# Avatar size: sm | md | lg
NEXT_PUBLIC_AVATAR_SIZE=md

# Show user presence dots on avatars
NEXT_PUBLIC_SHOW_PRESENCE_DOTS=true

# Show channel icons
NEXT_PUBLIC_SHOW_CHANNEL_ICONS=true

# Show member count in channel header
NEXT_PUBLIC_SHOW_MEMBER_COUNT=true

# Timestamp format: relative | absolute | both
NEXT_PUBLIC_TIMESTAMP_FORMAT=relative

# Date format (date-fns format string)
NEXT_PUBLIC_DATE_FORMAT=MMM d, yyyy

# Time format (date-fns format string)
NEXT_PUBLIC_TIME_FORMAT=h:mm a


# ═══════════════════════════════════════════════════════════════════════════════
# LIMITS
# ═══════════════════════════════════════════════════════════════════════════════

# Maximum message length (characters)
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=4000

# Maximum file size for uploads (bytes) - default 100MB
NEXT_PUBLIC_MAX_FILE_SIZE=104857600

# Maximum attachments per message
NEXT_PUBLIC_MAX_ATTACHMENTS_PER_MESSAGE=10

# Message edit window (milliseconds) - default 5 minutes
NEXT_PUBLIC_MESSAGE_EDIT_WINDOW=300000

# Maximum channels a user can join
NEXT_PUBLIC_MAX_CHANNELS_PER_USER=500

# Maximum direct message conversations
NEXT_PUBLIC_MAX_DMS_PER_USER=1000

# Maximum members in a group DM
NEXT_PUBLIC_MAX_GROUP_DM_MEMBERS=8

# Maximum pins per channel
NEXT_PUBLIC_MAX_PINS_PER_CHANNEL=50

# Maximum bookmarks per user
NEXT_PUBLIC_MAX_BOOKMARKS_PER_USER=100

# Message fetch page size
NEXT_PUBLIC_MESSAGE_PAGE_SIZE=50


# ═══════════════════════════════════════════════════════════════════════════════
# AUTHENTICATION PROVIDERS
# ═══════════════════════════════════════════════════════════════════════════════

# Email/password authentication
NEXT_PUBLIC_AUTH_EMAIL_PASSWORD=true

# Magic link authentication (passwordless)
NEXT_PUBLIC_AUTH_MAGIC_LINKS=false

# Google OAuth
NEXT_PUBLIC_AUTH_GOOGLE=false
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# GitHub OAuth
NEXT_PUBLIC_AUTH_GITHUB=false
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Discord OAuth
NEXT_PUBLIC_AUTH_DISCORD=false
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=

# Slack OAuth
NEXT_PUBLIC_AUTH_SLACK=false
# SLACK_CLIENT_ID=
# SLACK_CLIENT_SECRET=

# Microsoft/Azure AD
NEXT_PUBLIC_AUTH_MICROSOFT=false
# MICROSOFT_CLIENT_ID=
# MICROSOFT_CLIENT_SECRET=

# Apple Sign In
NEXT_PUBLIC_AUTH_APPLE=false
# APPLE_CLIENT_ID=
# APPLE_CLIENT_SECRET=

# ID.me (government-grade identity verification)
NEXT_PUBLIC_AUTH_IDME=false
# IDME_CLIENT_ID=
# IDME_CLIENT_SECRET=

# SAML/SSO (enterprise)
NEXT_PUBLIC_AUTH_SAML=false
# SAML_ENTRY_POINT=
# SAML_ISSUER=
# SAML_CERT=


# ═══════════════════════════════════════════════════════════════════════════════
# AUTHENTICATION SETTINGS
# ═══════════════════════════════════════════════════════════════════════════════

# Access mode: allow-all | verified-only | domain-restricted | admin-only
NEXT_PUBLIC_AUTH_ACCESS_MODE=allow-all

# Require email verification
NEXT_PUBLIC_AUTH_REQUIRE_EMAIL_VERIFICATION=false

# Allowed email domains (comma-separated, for domain-restricted mode)
# NEXT_PUBLIC_AUTH_ALLOWED_DOMAINS=company.com,partner.com

# Require admin approval for new users
NEXT_PUBLIC_AUTH_REQUIRE_APPROVAL=false

# Default role for new users: member | guest
NEXT_PUBLIC_AUTH_DEFAULT_ROLE=member

# Default channels to join (comma-separated slugs)
NEXT_PUBLIC_AUTH_DEFAULT_CHANNELS=general,announcements


# ═══════════════════════════════════════════════════════════════════════════════
# NOTIFICATIONS
# ═══════════════════════════════════════════════════════════════════════════════

# Desktop notifications
NEXT_PUBLIC_NOTIFICATIONS_DESKTOP=true

# Sound notifications
NEXT_PUBLIC_NOTIFICATIONS_SOUND=true

# Email notifications
NEXT_PUBLIC_NOTIFICATIONS_EMAIL=false

# Mobile push notifications (requires additional setup)
NEXT_PUBLIC_NOTIFICATIONS_PUSH=false


# ═══════════════════════════════════════════════════════════════════════════════
# SEO & SOCIAL
# ═══════════════════════════════════════════════════════════════════════════════

# Meta title (defaults to app name)
# NEXT_PUBLIC_META_TITLE=

# Meta description
NEXT_PUBLIC_META_DESCRIPTION=Modern team communication platform

# Open Graph image
# NEXT_PUBLIC_OG_IMAGE=/og-image.png

# Twitter handle (without @)
# NEXT_PUBLIC_TWITTER_HANDLE=

# Google Analytics ID
# NEXT_PUBLIC_GA_ID=

# Plausible Analytics domain
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=


# ═══════════════════════════════════════════════════════════════════════════════
# LEGAL
# ═══════════════════════════════════════════════════════════════════════════════

# Privacy policy URL
NEXT_PUBLIC_PRIVACY_URL=/privacy

# Terms of service URL
NEXT_PUBLIC_TERMS_URL=/terms

# Cookie policy URL
# NEXT_PUBLIC_COOKIE_POLICY_URL=/cookies


# ═══════════════════════════════════════════════════════════════════════════════
# NSELF CLI INTEGRATION
# ═══════════════════════════════════════════════════════════════════════════════

# nself CLI version this project is built for
NSELF_CLI_VERSION=0.4.8

# Enabled nself plugins (comma-separated)
# NSELF_PLUGINS_ENABLED=stripe,github,shopify


# ═══════════════════════════════════════════════════════════════════════════════
# SERVER-SIDE ONLY (not exposed to client)
# ═══════════════════════════════════════════════════════════════════════════════

# Hasura admin secret (for server-side GraphQL operations)
# HASURA_ADMIN_SECRET=

# JWT secret (for signing tokens)
# JWT_SECRET=

# Database URL (for direct database access)
# DATABASE_URL=postgres://user:password@localhost:5432/nchat

# Redis URL (for caching and sessions)
# REDIS_URL=redis://localhost:6379

# Sentry DSN (for error tracking)
# SENTRY_DSN=

# SendGrid API key (for transactional emails)
# SENDGRID_API_KEY=

# AWS S3 configuration (alternative to MinIO)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_S3_REGION=


# ═══════════════════════════════════════════════════════════════════════════════
# DEVELOPMENT ONLY
# ═══════════════════════════════════════════════════════════════════════════════

# Enable React Query devtools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Enable debug logging
NEXT_PUBLIC_DEBUG=false

# Mock API responses (for offline development)
NEXT_PUBLIC_MOCK_API=false
