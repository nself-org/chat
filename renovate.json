{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeMinor",
    "schedule:weekends"
  ],
  "labels": ["dependencies"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "baseBranches": ["main", "develop"],
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group React packages",
      "groupName": "React",
      "matchPackagePatterns": ["^react", "^@types/react"],
      "automerge": false
    },
    {
      "description": "Group Next.js packages",
      "groupName": "Next.js",
      "matchPackagePatterns": ["^next", "^@next/"],
      "automerge": false
    },
    {
      "description": "Group Radix UI packages",
      "groupName": "Radix UI",
      "matchPackagePatterns": ["^@radix-ui/"]
    },
    {
      "description": "Group testing packages",
      "groupName": "Testing",
      "matchPackagePatterns": [
        "^jest",
        "^@jest/",
        "^@testing-library/",
        "^@playwright/",
        "^playwright"
      ]
    },
    {
      "description": "Group linting packages",
      "groupName": "Linting",
      "matchPackagePatterns": [
        "^eslint",
        "^@eslint/",
        "^prettier",
        "^@typescript-eslint/"
      ]
    },
    {
      "description": "Group TypeScript packages",
      "groupName": "TypeScript",
      "matchPackagePatterns": ["^typescript", "^@types/"]
    },
    {
      "description": "Group TipTap packages",
      "groupName": "TipTap",
      "matchPackagePatterns": ["^@tiptap/"]
    },
    {
      "description": "Group Apollo packages",
      "groupName": "Apollo",
      "matchPackagePatterns": ["^@apollo/"]
    },
    {
      "description": "Group Nhost packages",
      "groupName": "Nhost",
      "matchPackagePatterns": ["^@nhost/"]
    },
    {
      "description": "Do not auto-merge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"]
    },
    {
      "description": "Require manual review for security packages",
      "matchPackagePatterns": ["bcrypt", "jsonwebtoken", "crypto"],
      "automerge": false,
      "labels": ["security"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  }
}
