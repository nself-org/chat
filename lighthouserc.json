{
  "ci": {
    "collect": {
      "startServerCommand": "pnpm build && pnpm start",
      "startServerReadyPattern": "(Local:|ready)",
      "startServerReadyTimeout": 180000,
      "url": [
        "http://localhost:3000/"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "screenEmulation": {
          "mobile": false,
          "width": 1350,
          "height": 940,
          "deviceScaleFactor": 1,
          "disabled": false
        },
        "formFactor": "desktop",
        "onlyCategories": [
          "performance",
          "accessibility",
          "best-practices",
          "seo"
        ]
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.8}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["warn", {"minScore": 0.85}],
        "categories:seo": ["warn", {"minScore": 0.85}],

        "first-contentful-paint": ["warn", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 3000}],
        "cumulative-layout-shift": ["warn", {"maxNumericValue": 0.15}],
        "total-blocking-time": ["warn", {"maxNumericValue": 500}],
        "speed-index": ["warn", {"maxNumericValue": 4000}],

        "interactive": ["warn", {"maxNumericValue": 4000}],
        "max-potential-fid": ["warn", {"maxNumericValue": 150}],

        "uses-optimized-images": "warn",
        "uses-responsive-images": "warn",
        "uses-text-compression": "warn",
        "uses-rel-preconnect": "warn",
        "font-display": "warn",
        "unused-javascript": "warn",
        "unused-css-selector": "warn",
        "modern-image-formats": "warn",

        "aria-allowed-attr": "warn",
        "aria-required-attr": "warn",
        "aria-valid-attr-value": "warn",
        "button-name": "warn",
        "bypass": "warn",
        "color-contrast": "warn",
        "document-title": "warn",
        "duplicate-id-aria": "warn",
        "html-has-lang": "warn",
        "image-alt": "warn",
        "input-image-alt": "warn",
        "label": "warn",
        "link-name": "warn",
        "meta-viewport": "warn",
        "tabindex": "warn",

        "is-on-https": "off",
        "redirects-http": "off",
        "uses-http2": "warn",
        "no-vulnerable-libraries": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "reportFilenamePattern": "%%PATHNAME%%-%%DATETIME%%-report.%%EXTENSION%%"
    }
  }
}
