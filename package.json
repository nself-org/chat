  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:all": "./scripts/build-all.sh",
    "build:web": "./scripts/build-web.sh",
    "build:desktop": "./scripts/build-desktop.sh",
    "build:mobile": "./scripts/build-mobile.sh",
    "build:tauri": "./scripts/build-tauri-all.sh",
    "build:electron": "./scripts/build-electron-all.sh",
    "build:docker": "docker build -t nself-chat:latest .",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:all": "./scripts/lint-all.sh",
    "test": "NODE_OPTIONS='--max-old-space-size=8192' jest --forceExit --maxWorkers=2",
    "test:watch": "jest --watch --maxWorkers=2",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=8192' jest --coverage --forceExit --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:mobile": "detox test",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:e2e:appium": "wdio appium.config.js",
    "test:performance": "detox test e2e/mobile/performance.spec.ts",
    "test:load": "./tests/load/run-all-tests.sh",
    "test:load:websocket": "k6 run tests/load/websocket-connections.js",
    "test:load:messages": "k6 run tests/load/message-throughput.js",
    "test:load:api": "k6 run tests/load/api-endpoints.js",
    "test:load:files": "k6 run tests/load/file-uploads.js",
    "test:load:search": "k6 run tests/load/search-queries.js",
    "test:all": "./scripts/test-all.sh",
    "test:oauth": "tsx scripts/test-oauth-providers.ts",
    "test:coverage:analyze": "tsx scripts/analyze-coverage.ts",
    "test:generate-stubs": "tsx scripts/generate-test-stubs.ts",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert",
    "lighthouse:upload": "lhci upload",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "pnpm type-check && pnpm lint && pnpm test && pnpm build",
    "validate:env": "tsx scripts/validate-env.ts",
    "validate:env:prod": "tsx scripts/validate-env.ts --production",
    "precommit": "pnpm type-check && pnpm format:check && pnpm lint",
    "check-all": "pnpm type-check && pnpm format:check && pnpm lint && pnpm test:coverage",
    "clean": "./scripts/clean.sh",
    "clean:all": "./scripts/clean.sh --all",
    "prepare": "echo 'pnpm ready'",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh --patch",
    "release:minor": "./scripts/release.sh --minor",
    "release:major": "./scripts/release.sh --major",
    "version": "./scripts/version-bump.sh",
    "backend:start": "cd .backend && nself start",
    "backend:stop": "cd .backend && nself stop",
    "backend:status": "cd .backend && nself status",
    "backend:logs": "cd .backend && nself logs",
    "db:migrate": "cd .backend && nself db migrate up",
    "db:seed": "cd .backend && nself db seed",
    "db:types": "cd .backend && nself db types typescript --output ../src/types/generated/database.ts",
    "db:studio": "cd .backend && nself db shell",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "cap": "cap",
    "cap:sync": "cap sync",
    "cap:build": "cap build",
    "ios:icons": "cd platforms/capacitor && ./scripts/generate-ios-icons.sh",
    "ios:build:debug": "cd platforms/capacitor && ./scripts/build-ios.sh debug",
    "ios:build:release": "cd platforms/capacitor && ./scripts/build-ios.sh release app-store",
    "ios:build:adhoc": "cd platforms/capacitor && ./scripts/build-ios.sh release ad-hoc",
    "ios:open": "cd platforms/capacitor && npx cap open ios",
    "ios:sync": "cd platforms/capacitor && npx cap sync ios",
    "ios:run": "cd platforms/capacitor && npx cap run ios",
    "ios:clean": "cd platforms/capacitor/ios && xcodebuild clean && rm -rf build DerivedData",
    "ios:pods": "cd platforms/capacitor/ios/App && pod install",
    "ios:screenshots": "cd platforms/capacitor && ./scripts/generate-screenshots.sh",
    "worker:embeddings": "tsx src/workers/embedding-worker.ts",
    "worker:maintenance": "tsx src/workers/embedding-maintenance-worker.ts",
    "workers:start": "pm2 start src/workers/embedding-worker.ts --name embedding-worker && pm2 start src/workers/embedding-maintenance-worker.ts --name embedding-maintenance",
    "workers:stop": "pm2 stop embedding-worker embedding-maintenance",
    "workers:restart": "pm2 restart embedding-worker embedding-maintenance",
    "workers:logs": "pm2 logs"
  },
