{
  "name": "nself-chat",
  "version": "0.9.0",
  "description": "ɳChat v0.9.0 - Full-featured team communication platform with WebRTC, OAuth, channels, and comprehensive test coverage. Powered by ɳSelf.",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "keywords": [
    "chat",
    "messaging",
    "team-communication",
    "slack-alternative",
    "discord-alternative",
    "mobile",
    "ios",
    "android",
    "desktop",
    "electron",
    "capacitor",
    "offline-first",
    "ai-powered",
    "vector-search",
    "bot-framework",
    "multi-tenant",
    "saas",
    "nextjs",
    "react",
    "typescript",
    "nself"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
