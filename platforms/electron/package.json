{
  "name": "nchat-desktop",
  "productName": "nchat",
  "version": "1.0.0",
  "description": "nself-chat Desktop Application - White-label team communication platform",
  "main": "main.js",
  "author": {
    "name": "nself",
    "email": "hello@nself.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nself/nself-chat"
  },
  "scripts": {
    "start": "electron .",
    "start:dev": "cross-env NODE_ENV=development electron .",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:all": "npm run build:main && npm run build:preload",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:preload": "tsc -p tsconfig.preload.json --watch",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --config electron-builder.yml",
    "dist:mac": "electron-builder --mac --config electron-builder.yml",
    "dist:win": "electron-builder --win --config electron-builder.yml",
    "dist:linux": "electron-builder --linux --config electron-builder.yml",
    "dist:all": "electron-builder -mwl --config electron-builder.yml",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-log": "^5.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@types/node": "^20.11.5",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
