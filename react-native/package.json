{
  "name": "nchat-mobile",
  "version": "0.2.0",
  "description": "nChat React Native mobile app - White-label team communication platform",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "ios:device": "react-native run-ios --device",
    "android:device": "react-native run-android --device",
    "ios:release": "react-native run-ios --configuration Release",
    "android:release": "react-native run-android --variant=release",
    "build:ios": "cd ios && xcodebuild -workspace nchat.xcworkspace -scheme nchat -configuration Release -sdk iphoneos archive -archivePath build/nchat.xcarchive",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:bundle": "cd android && ./gradlew bundleRelease",
    "clean": "react-native start --reset-cache",
    "clean:ios": "cd ios && rm -rf build Pods && pod install",
    "clean:android": "cd android && ./gradlew clean",
    "pod:install": "cd ios && pod install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@apollo/client": "^3.12.8",
    "@gorhom/bottom-sheet": "^5.0.6",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@react-native-camera-roll/camera-roll": "^7.9.0",
    "@react-native-clipboard/clipboard": "^1.15.0",
    "@react-native-community/blur": "^4.4.1",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/native-stack": "^7.2.0",
    "date-fns": "^4.1.0",
    "expo-av": "^15.0.2",
    "expo-camera": "^16.0.13",
    "expo-file-system": "^18.0.7",
    "expo-haptics": "^14.0.1",
    "expo-image-picker": "^16.0.4",
    "expo-local-authentication": "^15.0.2",
    "expo-media-library": "^17.0.5",
    "expo-notifications": "^0.29.13",
    "expo-sharing": "^13.0.1",
    "graphql": "^16.11.0",
    "graphql-ws": "^6.0.6",
    "react": "18.3.1",
    "react-native": "0.76.6",
    "react-native-gesture-handler": "^2.21.2",
    "react-native-image-crop-picker": "^0.41.5",
    "react-native-keyboard-controller": "^1.15.0",
    "react-native-mmkv": "^3.2.0",
    "react-native-reanimated": "^3.16.7",
    "react-native-safe-area-context": "^5.0.0",
    "react-native-screens": "^4.5.0",
    "react-native-svg": "^15.11.1",
    "react-native-video": "^6.8.5",
    "socket.io-client": "^4.8.1",
    "zod": "^3.24.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@babel/runtime": "^7.26.7",
    "@react-native/babel-preset": "0.76.6",
    "@react-native/eslint-config": "0.76.6",
    "@react-native/metro-config": "0.76.6",
    "@react-native/typescript-config": "0.76.6",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "@types/react-test-renderer": "^18.3.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20"
  }
}
