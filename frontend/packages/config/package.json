{
  "name": "@nself-chat/config",
  "version": "0.9.2",
  "private": true,
  "description": "Shared configuration and environment variables for nself-chat",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./eslint": "./eslint.config.js",
    "./tailwind": "./tailwind.config.ts",
    "./typescript": "./tsconfig.json"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@nself-chat/core": "workspace:*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.7.0",
    "@types/node": "^22.10.5",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "nself-chat",
    "config"
  ]
}
