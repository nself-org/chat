{
  "id": "scheduler-bot",
  "name": "Scheduler Bot",
  "description": "Schedule messages and create recurring tasks for your team",
  "version": "1.0.0",
  "author": "nself",
  "icon": "ðŸ“…",
  "permissions": ["read_messages", "send_messages"],
  "commands": [
    {
      "name": "schedule",
      "description": "Schedule a message to be sent later",
      "aliases": ["schedmsg"],
      "examples": [
        "/schedule 1h \"Meeting reminder!\"",
        "/schedule 2d \"Deadline tomorrow!\" #team"
      ]
    },
    {
      "name": "scheduled",
      "description": "List your scheduled messages",
      "aliases": ["schedules"],
      "examples": ["/scheduled"]
    },
    {
      "name": "cancelschedule",
      "description": "Cancel a scheduled message",
      "aliases": ["cancelsched"],
      "examples": ["/cancelschedule sched_abc123"]
    },
    {
      "name": "recurring",
      "description": "Create a recurring message",
      "examples": ["/recurring 1d \"Daily standup!\"", "/recurring 1w \"Weekly sync!\" #team"]
    },
    {
      "name": "recurringtasks",
      "description": "List your recurring tasks",
      "aliases": ["recurring-list"],
      "examples": ["/recurringtasks"]
    },
    {
      "name": "cancelrecurring",
      "description": "Cancel a recurring task",
      "examples": ["/cancelrecurring task_abc123"]
    }
  ],
  "settings": [
    {
      "key": "max_duration",
      "label": "Max Schedule Duration",
      "description": "Maximum days in advance to schedule messages",
      "type": "number",
      "default": 30,
      "validation": { "min": 1, "max": 365 }
    },
    {
      "key": "max_recurring",
      "label": "Max Recurring Tasks",
      "description": "Maximum recurring tasks per user",
      "type": "number",
      "default": 10,
      "validation": { "min": 1, "max": 50 }
    }
  ],
  "triggers": []
}
