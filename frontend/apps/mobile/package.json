{
  "name": "@nself-chat/mobile",
  "version": "0.9.2",
  "private": true,
  "description": "Mobile app for nself-chat (iOS + Android) built with Capacitor",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "android": "cap run android",
    "ios": "cap run ios",
    "sync": "cap sync",
    "sync:android": "cap sync android",
    "sync:ios": "cap sync ios",
    "build:android": "pnpm build && cap copy android && cap open android",
    "build:ios": "pnpm build && cap copy ios && cap open ios",
    "cap:add:android": "cap add android",
    "cap:add:ios": "cap add ios"
  },
  "dependencies": {
    "@nself-chat/core": "workspace:*",
    "@nself-chat/api": "workspace:*",
    "@nself-chat/state": "workspace:*",
    "@nself-chat/ui": "workspace:*",
    "@nself-chat/config": "workspace:*",
    "@aparajita/capacitor-biometric-auth": "^9.1.2",
    "@capacitor/app": "^6.0.1",
    "@capacitor/camera": "^6.1.0",
    "@capacitor/core": "^6.2.0",
    "@capacitor/filesystem": "^6.0.2",
    "@capacitor/haptics": "^6.0.1",
    "@capacitor/keyboard": "^6.0.3",
    "@capacitor/network": "^6.0.3",
    "@capacitor/preferences": "^6.0.3",
    "@capacitor/push-notifications": "^6.0.3",
    "@capacitor/splash-screen": "^6.0.3",
    "@capacitor/status-bar": "^6.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.2.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@capacitor/android": "^6.2.0",
    "@capacitor/cli": "^6.2.0",
    "@capacitor/ios": "^6.2.0",
    "@nself-chat/testing": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.7.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "vite": "^6.0.7"
  },
  "keywords": [
    "nself-chat",
    "mobile",
    "ios",
    "android",
    "capacitor",
    "react"
  ]
}
